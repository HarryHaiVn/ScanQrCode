<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorTextApp</item>
    </style>

    <style name="style_icon_setting">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:layout_margin">@dimen/_24sdp</item>
    </style>

    <style name="style_text_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorTextApp</item>
    </style>

    <style name="style_switch_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>
    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/form_text_color</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingTop">14.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingBottom">14.0dip</item>
    </style>
    <style name="style_image_history">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:tint">@color/colorOrange</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>
</resources>
